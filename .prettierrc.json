{
  "$schema": "http://json.schemastore.org/prettierrc",
  "printWidth": 100,
  "semi": false,
  "singleQuote": true,
  "useTabs": false,
  "jsxSingleQuote": false,
  "liquidSingleQuote": false,
  "overrides": [
    {
      "files": "*.html",
      "options": {
        "plugins": [
          "@shopify/prettier-plugin-liquid"
        ],
        "parser": "liquid-html",
        "singleQuote": false,
        "liquidSingleQuote": false
      }
    },
    {
      "files": [
        "*.scss",
        "*.css"
      ],
      "options": {
        "singleQuote": false,
        "printWidth": 80
      }
    }
  ]
}
