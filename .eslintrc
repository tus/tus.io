{
  "extends": "standard",
  "env": {
    "es6": true,
    "jest": true,
    "node": true,
    "browser": true
  },
  "globals": {
    "GENTLY": true,
    "$": true,
    "jQuery": true
  },
  "rules": {
    "no-multi-spaces": ["off"],
    "node/no-path-concat": ["off"],
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "key-spacing": [
      "error",
      {
        "multiLine": {
          "beforeColon": false,
          "afterColon": true
        },
        "align": {
          "beforeColon": false,
          "afterColon": true,
          "on": "colon",
          "mode": "strict"
        }
      }
    ]
  }
}
