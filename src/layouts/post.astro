---
import Layout from './default.astro'

interface Props {
  title: string
  description?: string
}

const { title, description } = Astro.props
---

<Layout title={title} description={description}>
  <article>
    <slot />
  </article>
</Layout>

<style>
  article {
    max-inline-size: 50rem;
    margin: 0 auto;
    padding-inline: var(--space3);
  }
</style>
