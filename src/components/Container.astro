---
import clsx from 'clsx'

interface Props {
  className?: string
}

const { className } = Astro.props
---

<div class={clsx('container', className)}>
  <slot />
</div>

<style>
  .container {
    max-inline-size: 100rem;
    margin: 0 auto;
    padding-inline: var(--space3);
  }

  @media screen and (width >= 768px) {
    .container {
      padding-inline: var(--space6);
    }
  }
</style>
